# ========================================
# Firebase Auth Kit 示例 - 环境变量配置
# ========================================

# 通用配置
# 请从 Firebase Console 获取这些值
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_MESSAGING_SENDER_ID=your-sender-id

# ========================================
# Web 平台配置
# ========================================
# 在 Firebase Console 中添加 Web 应用后获取
FIREBASE_WEB_API_KEY=your-web-api-key
FIREBASE_WEB_APP_ID=your-web-app-id
FIREBASE_WEB_AUTH_DOMAIN=your-project-id.firebaseapp.com
FIREBASE_WEB_STORAGE_BUCKET=your-project-id.appspot.com
FIREBASE_WEB_MEASUREMENT_ID=your-web-measurement-id

# ========================================
# Android 平台配置
# ========================================
# 在 Firebase Console 中添加 Android 应用后获取
FIREBASE_ANDROID_API_KEY=your-android-api-key
FIREBASE_ANDROID_APP_ID=your-android-app-id
FIREBASE_ANDROID_STORAGE_BUCKET=your-project-id.appspot.com

# Android 应用包名（必须与 Firebase Console 中配置的一致）
FIREBASE_ANDROID_PACKAGE_NAME=com.example.firebase_auth_kit_example

# ========================================
# iOS 平台配置
# ========================================
# 在 Firebase Console 中添加 iOS 应用后获取
FIREBASE_IOS_API_KEY=your-ios-api-key
FIREBASE_IOS_APP_ID=your-ios-app-id
FIREBASE_IOS_STORAGE_BUCKET=your-project-id.appspot.com

# iOS Bundle ID（必须与 Firebase Console 中配置的一致）
FIREBASE_IOS_BUNDLE_ID=com.example.firebaseAuthKitExample

# ========================================
# macOS 平台配置
# ========================================
# 在 Firebase Console 中添加 macOS 应用后获取
FIREBASE_MACOS_API_KEY=your-macos-api-key
FIREBASE_MACOS_APP_ID=your-macos-app-id
FIREBASE_MACOS_STORAGE_BUCKET=your-project-id.appspot.com

# macOS Bundle ID（必须与 Firebase Console 中配置的一致）
FIREBASE_MACOS_BUNDLE_ID=com.example.firebaseAuthKitExample

# ========================================
# Windows 平台配置
# ========================================
# 在 Firebase Console 中添加 Windows 应用后获取
FIREBASE_WINDOWS_API_KEY=your-windows-api-key
FIREBASE_WINDOWS_APP_ID=your-windows-app-id
FIREBASE_WINDOWS_STORAGE_BUCKET=your-project-id.appspot.com

# ========================================
# GitHub OAuth 配置
# ========================================
# 请从 GitHub Developer Settings 获取这些值
# 注意：Client ID 和 Client Secret 在所有平台中都是统一的
# 只有回调 URL 会根据平台有所不同

# GitHub OAuth 统一配置（所有平台通用）
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:8080/__/auth/handler

# Google OAuth 配置（所有平台通用）
GOOGLE_WEB_CLIENT_ID=your-google-web-client-id
GOOGLE_ANDROID_CLIENT_ID=your-google-android-client-id
GOOGLE_IOS_CLIENT_ID=your-google-ios-client-id

# Facebook OAuth 配置（所有平台通用）
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret 